{% extends "base.html.twig" %}

{% block title %}Liste des
	{{ category.name }}
{% endblock %}

{% block body %}
	<main class="container mb-3">
		<section class="row">
			<div class="col-12">
				<h1>Liste des
					{{ category.name }}</h1>
			</div>
			{% for product in products.data %}
				<div class="col-4 mb-3">
					<div class="card h-100">
						<img src="{{ asset('assets/images/deuxiemeCafe.jpg') }}" class="img-fluid rounded-start" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{ product.name }}</h5>
							<p class="card-text">{{ product.description }}</p>
							<a href="{{ path('products_details', {name: product.name}) }}" class="btn btn-primary ">Voir les d√©tails</a>
						</div>
					</div>
				</div>
			{% endfor %}
			{% set path = 'coffee_list' %}
			{% set name = category.name %}
			{% set pages = products.pages %}
			{% set currentPage = products.page %}
			{% include "partials/_pagination.html.twig" %}
		</section>
	</main>
{% endblock %}
