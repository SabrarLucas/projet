{% extends "base.html.twig" %}

{% block title %}Detail
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<table class="table">
					<thead>
						<tr>
							<th>Date commande</th>
							<th>Produit</th>
							<th>Quantit√©s</th>
							<th>Prix</th>
						</tr>
					</thead>
					<tbody>
						{% for detail in details %}
							<tr>
								<td>{{ detail.orders.createdAt | date('d/m/Y') }}</td>
								<td>{{ detail.products.name }}</td>
								<td>{{ detail.quantity }}</td>
								<td>{{ detail.total }}</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<td colspan="3"></td>
							<td><a href="{{ path('orders_index', {id: app.user.id}) }}" class="btn btn-primary">Retour</a></td>
						</tr>
					</tfoot>
				</table>
			</div>
		</section>
	</main>
{% endblock %}
