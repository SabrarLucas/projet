			<div class="col-12">
				<table class="table">
					<thead>
						<tr>
							<th>Date commande</th>
							<th>Produit</th>
							<th>Quantit√©s</th>
							<th>Prix</th>
						</tr>
					</thead>
					<tbody>
						{% for detail in details %}
							<td>{{ detail.orders.createdAt | date('d/m/Y') }}</td>
