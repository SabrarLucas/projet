{% extends "base.html.twig" %}

{% block title %}Détails de {{ product.name }}{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>{{ product.name }}</h1>
            </div>
            <div class="col-6">
                <img src="/assets/images/{{product.image}}" alt="">
            </div>
            <div class="col-6">
                <p>{{ product.description }}</p>
                <p>Catégorie : {{ product.categories.name }}</p>
                <p>Prix : {{ product.price |format_currency('EUR', locale='fr') }} </p>
                {% if product.stock > 0 %}
                    <a href="#" class="btn btn-success">Ajouter au panier</a>
                {% else %}
                    <p class="text-danger">Temporairement en rupture de stock</p>
                {% endif %}
                
            </div>
        </section>
    </main>

{% endblock %}